{
    "name": "build-finder",
    "private": true,
    "workspaces": [
        "frontend"
    ],
    "scripts": {
        "dev": "npm run dev -w frontend",
        "lint": "npm run lint -w frontend",
        "format": "npm run format -w frontend",
        "prisma:push": "prisma db push --schema=backend/app/db/schemas/schema.prisma",
        "prisma:generate": "prisma generate --schema=backend/app/db/schemas/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=backend/app/db/schemas/schema.prisma",
        "prisma:studio": "prisma studio --schema=backend/app/db/schemas/schema.prisma"
    },
    "dependencies": {
        "@prisma/client": "^6.19.0",
        "react": "^19.2.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.22",
        "postcss": "^8.5.6",
        "prisma": "^6.19.0",
        "tailwindcss": "^3.4.18"
    }
}