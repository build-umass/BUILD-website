generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  preferredName  String?
  email          String   @unique
  occupation     String
  graduatingYear Int?
  major          String?
  company        String?
  position       String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([lastName, firstName])
  @@map("users")
}